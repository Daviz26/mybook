<% if @posts %>
<% @posts.each do |post| %>
  <div class="post-area">
    <div class="post-avatar pull-left">
      <%#= link_to gravatar_for(post.user, size: 50), post.user %>
      <%= link_to (image_tag @user.avatar.url, size: "50x50"), profile_path(@user.user_name) %>
    </div>
    <div class="content">
      <%= post.content %>
    <%#= image_tag post.picture.url if post.picture? %>
    </div>
    <div class="timestamp">
      <%= time_ago_in_words(post.created_at) %> ago. 
    <span class="delete">
    <% if current_user %>
     | <%= link_to ("<i class='fa fa-trash-o'></i>").html_safe, post, method: :delete, data: { confirm: "Do you really wana delete?" } %>
    <% end %>
    </span>
    </div>
  </div>
<% end %>
<% end %>

