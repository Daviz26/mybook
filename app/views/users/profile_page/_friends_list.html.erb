<div class="frnds-title">Friends</div>

<% if @user.following %>
  <div class="frnds-lst">
    <% @user.following.each do |following| %>
      <%#= link_to gravatar_for(user, size: 30), user %>
      <%= link_to (image_tag following.avatar.url, size: "100x110", class: "each-avatar"), profile_path(following.user_name) %>
    <% end %>
  </div>
<% end %>
