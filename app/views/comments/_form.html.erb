<% if current_user %>
  <div class="comment-form">
    <div class="col-md-4 no-padding">
      <%= simple_form_for [@photo, @photo.comments.build] do |f| %>
        <%= f.text_field :content, placeholder: ' Add a comment...', :style => 'width: 285px; height: 25px; border:none' %>
      <% end %>
    </div>
  </div>
<% end %>