<div class="container">
  <div class="col-lg-4 no-padding pull-right">
    <%= bootstrap_devise_error_messages! %>
      <div class="signup-area">
        <div class="panel-heading">
          <h4>Create Your Account</h4>
        </div>
        <div class="panel-body">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
            <div class="form-group no-padding">
              <div class="col-sm-6 no-padding right-padding bottom-padding">
              <%= f.text_field :first_name, placeholder: 'First name', autofocus: true, class: "form-control" %>
              </div>
              <div class="col-sm-6 no-padding bottom-padding">
              <%= f.text_field :last_name, placeholder: 'Surname', class: "form-control" %>
              </div>
            </div>         
            <div class="form-group no-padding">
              <div class="col-sm-6 no-padding right-padding bottom-padding">
              <%= f.email_field :email, placeholder: 'Email address', class: "form-control" %>
              </div>
              <div class="col-sm-6 no-padding bottom-padding">
              <%= f.text_field :user_name,  placeholder: 'User name', required: true, class: "form-control" %>
              </div>
            </div> 
            <div class="form-group">
              <div class="col-sm-6 no-padding right-padding bottom-padding">
              <%= f.password_field :password, placeholder: 'New password', class: "form-control" %>
              </div>
              <div class="col-sm-6 no-padding bottom-padding">
              <%= f.password_field :password_confirmation, placeholder: 'Confirm password', class: "form-control" %>
              </div>
            </div>  
            <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
  </div> 
</div>  